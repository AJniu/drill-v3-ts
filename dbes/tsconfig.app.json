{
    "include": ["env.d.ts", "src/**/*", "src/**/**.vue", "src/**/**/*.ts", "src/**.vue"],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*", "./src/*.vue"]
        },
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "module": "ESNext",
        "lib": ["ES6"],
        "moduleResolution": "Node"
    }
}
